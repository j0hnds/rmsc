<h1>Coordinator</h1>

<ul>
  <li><strong>Name:</strong> <%= format_coordinator_name(@coordinator) -%></li>
  <li><strong>Phone:</strong> <%= @coordinator.phone -%></li>
  <li><strong>Email:</strong> <%= @coordinator.email -%></li>
</ul>
<hr>
<form class="ajaxed" action="<%= coordinator_path(@coordinator) %>" method="POST">
  <%= hidden_field_tag :_method, "delete" %>
  <%= field_set_tag nil, :class => 'submit'  do -%>
    <%= submit_tag 'Delete Coordinator' %>  <span>or <a class="cancel_form" href="#">Close</a></span>
  <% end %>
</form>
